<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Currency</th>
      <th>Mean price per oz</th>
      <th>Market1 price per oz</th>
      <th>Market2 price per oz</th>
      <th>Market3 price per oz</th>
      <th>Market4 price per oz</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.date %></td>
        <td><%= quote.currency %></td>
        <td><%= quote.mean_price_per_oz %></td>
        <td><%= quote.market1_price_per_oz %></td>
        <td><%= quote.market2_price_per_oz %></td>
        <td><%= quote.market3_price_per_oz %></td>
        <td><%= quote.market4_price_per_oz %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
